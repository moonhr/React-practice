{
  "compilerOptions": {
    "target": "es5", //컴파일한 후 생성될 JavaScript의 버전
    "lib": ["dom", "dom.iterable", "esnext"], //컴파일러가 포함할 라이브러리 파일
    "allowJs": true, //JavaScript 파일을 TypeScript 프로젝트에서 허용할지 여부를 설정합니다. true로 설정하면 JavaScript 파일도 컴파일
    "skipLibCheck": true, //타입 선언 파일 (.d.ts 파일)의 타입 검사를 건너뜀
    "esModuleInterop": true, //CommonJS와 ES 모듈 간의 상호 운용성을 가능
    "allowSyntheticDefaultImports": true, //기본 내보내기가 없는 모듈에서 기본 가져오기를 허용
    "strict": true, //엄격한 타입 검사를 활성화
    "forceConsistentCasingInFileNames": true, //파일 및 디렉터리 이름의 대소문자 일관성을 강제
    "noFallthroughCasesInSwitch": true, //switch 문에서 case가 break나 return 없이 다음 case로 넘어가는 것을 방지
    "module": "esnext", // 모듈 시스템을 설정
    "moduleResolution": "node", //모듈을 해석하는 방식을 설정
    "resolveJsonModule": true, //JSON 파일을 모듈로 가져올 수 있게
    "isolatedModules": true, //각 파일을 독립적인 모듈로 컴파일
    "noEmit": true, //출력을 생성하지 않음
    "jsx": "react-jsx" //JSX를 처리하는 방식을 설정
  },
  "include": ["src"] //컴파일러가 포함할 파일 또는 디렉터리
}